extends layout.pug

block title
  title Bookstore!


block content
  div(class="row justify-content-center")
    if loggedIn
      h1(class="col-10 display-3 align-self-center") Welcome #{user} !
    else
      h1(class="col-10 display-3 align-self-center") Welcome!
  div(class="row my-5" style="border-bottom: 1px solid #343A40")

  
  if loggedOut
    div(class="row justify-content-center my-3")
      div(class="col-6 alert alert-warning alert-dismissible fade show" role="alert")
        strong You've successfully logged out!
        p We hope to see you back soon!
        button(type="button" class="close" data-dismiss="alert" aria-label="Close")
          span(aria-hidden="true") &times;
  
  if !loggedIn
    a(class="display-4 btn btn-lg btn-outline-secondary btn-block" href="/login" style="color:white") Please Login to use this Website!
  
  else
    div(class="row justify-content-center")
      div(class="col")
        div(id="carouselExampleControls" class="carousel slide " data-ride="carousel")
          div(class="carousel-inner rounded")
            div(class="carousel-item active")
              img(class="d-block w-100" src="/images/browse_carousel.png" alt="First slide")
              a(href="browse" class="btn btn-primary stretched-link invisible")
            div(class="carousel-item")
              img(class="d-block w-100" src="/images/favourites_carousel.png" alt="Second slide")
              a(href="browse" class="btn btn-primary stretched-link invisible")
            div(class="carousel-item")
              img(class="d-block w-100" src="/images/account_carousel.png" alt="Third slide")
              a(href="browse" class="btn btn-primary stretched-link invisible")
          a(class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev")
            span(class="carousel-control-prev-icon" aria-hidden="true")
            span(class="sr-only") Previous
            
          a(class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next")
            span(class="carousel-control-next-icon" aria-hidden="true")
            span(class="sr-only") Next
    div(class="row my-5"  style="border-bottom: 1px solid #343A40")
    
    
