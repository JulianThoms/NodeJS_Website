extends layout.pug

block title
  title Your results!

block content

  div(class="row")
    h1(class="col display-3") Your search results, #{username}
  div(class="row my-5" style="border-bottom: 1px solid #343A40")
  div(class="row text-center")
    div(class="col-1")
    if search_results != undefined
      div(class="col list-group")
        each result in search_results
          a(href="/search/"+result.id_book class="list-group-item list-group-item-action text-light my-2" style="background-color: #343A40")=result.title
    else
      div(class="col-10")
        div(Class="row display-4")=error_message
        div(class="row my-4")
          a(href="browse " class="btn btn-outline-light btn-block btn-lg") Browse
    div(class="col-1")
