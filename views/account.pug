extends layout.pug

block title
  title Favourites

block content
  div(class="row justify-content-center")
    h1(class="display-3") Account

  div(class="row my-5" style="border-bottom: 1px solid #343A40")

  form(action="/signup" method="post" class="form-signin")
    div(class="form-group")
      input(type="text", class="form-control", id="inputUsername", placeholder="Username", name="username" required)
    div(class="form-group")
      input(type="email", class="form-control", id="inputEmail", placeholder="Email", name="email" required)
    br
    div(class="form-group")
      input(type="password", class="form-control", id="inputPassword" placeholder="Password", name="password" required)
    div(class="form-group")
      input(type="password", class="form-control", id="inputPassword_check" placeholder="Repeat Password", name="password_check" required)

  div(class="input-group mb-3")
    input(type="text" class="form-control text-light bg-dark" placeholder="Current Password" aria-label="Current Password" aria-describedby="basic-addon2")
